<script src="https://js.stripe.com/v2/" type="text/javascript"></script>
<div class="row">
    <div class="col-sm-6 col-md-4 offset-4 offset-3">
        <h1>Checkout</h1>
        <h5>Your Total: <i class="fa fa-rupee-sign"></i> {{total}}</h5>
        <div id="card-errors" class="alert alert-danger {{#if noError}}visually-hidden{{/if}}" role="alert">
            {{errMsg}}
        </div>
        <form id="checkout-form" action="/checkout" method="POST">
            <div class="row">
                <div class="col-xs-12 mt-2">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" id="name" class="form-control" required name="name">
                    </div>
                </div>
                <div class="col-xs-12 mt-2">
                    <div class="form-group">
                        <label for="address">Address</label>
                        <input type="text" id="address" class="form-control" required name="address">
                    </div>
                </div>
                <div class="col-xs-12 mt-2">
                    <div class="form-group">
                        <label for="card-name">Card Holder Name</label>
                        <input type="text" id="card-name" class="form-control" name="holder" required>
                    </div>
                </div>
                <div class="col-xs-12 mt-2">
                    <div class="form-group">
                        <label for="card-number">Credit Card Number</label>
                        <input type="text" id="card-number" class="form-control" name="number" required>
                    </div>
                </div>
                <div class="col-xs-12 mt-2">
                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="card-expiry-month">Expiration Month</label>
                                <input type="text" id="card-expiry-month" class="form-control" name="month" required>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="card-expiry-year">Expiration Year</label>
                                <input type="text" id="card-expiry-year" class="form-control" name="year" required>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 mt-2">
                    <div class="form-group">
                        <label for="card-cvc">CVC</label>
                        <input type="text" id="card-cvc" class="form-control" name="cvc" required>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-success mt-4">Buy now</button>
        </form>
    </div>
</div>
<script type="text/javascript" src="javascripts/checkout.js"></script>