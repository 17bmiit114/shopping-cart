{{# if products }}
<div class="row">
    <div class="col-sm-6 col-md-6 offset-3 offset-3">
        <div id="card-errors" class="alert alert-danger {{#if noError}}visually-hidden{{/if}}" role="alert">
            {{errMsg}}
        </div>
        <ul class="list-group">
           {{# each products}} 
            <li class="list-group-item">
                <span class="badge rounded-pill bg-secondary float-end mt-2">{{ this.qty }}</span>
                <strong>{{ this.item.title }}</strong>
                <span class="badge bg-success"><i class="fa fa-rupee-sign"></i> {{ this.price }}</span>
                <div class="btn-group">
                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton"  data-bs-toggle="dropdown" aria-expanded="false">Action <span class="caret"></span></button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li><a class="dropdown-item" href="/reduce/{{this.item._id}}">Reduce by 1</a></li>
                        <li><a class="dropdown-item" href="/remove/{{this.item._id}}">Remove All</a></li>
                    </ul>
                </div>         
            </li>
           {{/each}} 
        </ul>
    </div>
</div>
<div class="row mt-2">
    <div class="col-sm-6 col-md-6 offset-3 offset-3">
        <strong>Total: {{ totalPrice }}</strong>
    </div>
</div>
<div class="row mt-2">
    <div class=" col-sm-6 col-md-6 offset-3 offset-3">
        <hr class="dropdown-divider">   
    </div>   
</div>
<div class="row mt-3">
    <div class="col-sm-6 col-md-6 offset-3 offset-3">
        <a href="/checkout" type="button" class="btn btn-success">Checkout</a>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-sm-6 col-md-6 offset-3 offset-3">
        <h2>No Items in Cart</h2>
    </div>
</div>
{{/if}}