<div class="row">
  <div class="col-sm-6 col-md-4 offset-sm-3 offset-md-4">
      <div class="alert alert-success {{#if noMessages }}visually-hidden{{/if}}">
        {{ successMsg }}
      </div>
  </div>
</div>
{{#each products }}
  <div class="row">
    {{#each this }}
      <div class="col-sm-3 g-3">
        <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{ this.imagePath }}" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title">{{ this.title }}<br><b><i class="fa fa-rupee-sign small"></i> {{this.price}}</b></h5>
            <p class="card-text">{{this.description}}</p>
            <a href="/add_to_cart/{{this._id}}" class="btn btn-primary" role="button">Add to Shopping Cart</a>
        </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}