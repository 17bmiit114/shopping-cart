<div class="row">
    <div id="card-errors" class="alert alert-danger {{#if noError}}visually-hidden{{/if}}" role="alert">
        {{errMsg}}
    </div>
    <div class="col-md-8 offset-2">
        <h1>User Profile</h1>
        <hr>
        <h2>My Orders</h2>
        {{# each orders}}
        <div class="card  mt-3">
            <div class="card-body p-3">
                <ul class="list-group">
                {{# each this.items}}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    {{this.item.title}} |  {{this.qty}} Units
                    <span class="badge bg-primary rounded-pill">{{ this.price }}</span>
                </li>
                {{/each}}
                </ul>
            </div>    
            <div class="card-footer">
                <strong>Total Price: <i class="fa fa-rupee-sign"></i> {{this.cart.totalPrice}}</strong>
            </div>
        </div>
        {{/each}}
    </div>
</div>